<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cav.magnifierlite.MainActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/zoom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:shadowColor="@color/gray"
        android:shadowRadius="2.5"
        android:scaleY="2"
        android:scaleX="1"
        android:paddingLeft="@dimen/space_size_8"
        android:paddingTop="@dimen/space_size_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/space_size_16"
        android:paddingTop="@dimen/space_size_16"
        android:paddingLeft="@dimen/space_size_8"
        android:paddingRight="@dimen/space_size_8"
        android:layout_marginBottom="@dimen/space_size_8"
        android:background="@color/gray_light_transparent">
        <ImageView
            android:id="@+id/flash_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash_on_black_24dp"
            android:layout_weight="0.25"
            android:padding="8dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/zoomPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1_black_24dp"
            android:layout_weight="0.25"
            android:padding="8dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/zoomMunus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_neg_1_black_24dp"
            android:layout_weight="0.25"
            android:padding="8dp"/>


    </LinearLayout>

</FrameLayout>
